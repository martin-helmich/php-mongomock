{
  "name": "helmich/mongomock",
  "description": "Library containing highly intelligent MongoDB mocks for unit testing",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Martin Helmich",
      "email": "kontakt@martin-helmich.de"
    }
  ],
  "require": {
    "php": ">=7.0.0",
    "ext-mongodb": "*",
    "mongodb/mongodb": "^1.0",
    "phpunit/phpunit": "^7.0"
  },
  "autoload": {
    "psr-4": {
      "Helmich\\MongoMock\\": "src"
    }
  },
  "autoload-dev": {
    "files": [
      "vendor/phpunit/phpunit/src/Framework/Assert/Functions.php"
    ],
    "psr-4": {
      "Helmich\\MongoMock\\Tests\\": "tests"
    }
  },
  "require-dev": {
    "codeclimate/php-test-reporter": "^0.3.0"
  },
  "scripts": {
    "test": [
      "phpunit"
    ]
  }
}
